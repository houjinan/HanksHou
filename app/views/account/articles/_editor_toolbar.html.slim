.row
  .col-lg-10
    .editor-toolbar
      .opts.pull-right
        a href="javascript: pickupEmoji()" class="pickup-emoji"
          i class="fa fa-smile-o"
        span class="dropdown dropdown-small" id="editor-toolbar-insert-code"
          a href="#editor-toolbar-insert-code" data-toggle="dropdown" title="插入代码"
            i class="fa fa-code"
          ul class="dropdown-menu insert-codes" role="menu"
            = insert_code_menu_items_tag
        = link_to(icon_tag("image"), "javascript: browseUpload()", id: "topic-upload-image", rel: "twipsy", title: "上传图片" )
      ul class="nav nav-pills" style="clear:none;"
        li class="edit active"
          = link_to("编辑", "javascript: edit_view()")
        li class="preview"
          = link_to("预览", "javascript: preview_view()")
javascript:
  $(document).ready(function(){
    initDropzone()
    initCloseWarning()
    FormStorage.restore()
    FormStorage.init()
  });